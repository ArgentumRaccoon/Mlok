{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "${workspaceFolder}/engine/Build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/engine/Build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "windows": {
                "command": "${workspaceFolder}/testbed/Build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/testbed/Build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/testbed"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Tests",
            "windows": {
                "command": "${workspaceFolder}/tests/Build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/tests/Build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/BuildAll.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/BuildAll.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows": {
                "command": "${workspaceFolder}/CleanAll.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/CleanAll.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Post-Build",
            "windows": {
                "command": "${workspaceFolder}/PostBuild.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/PostBuild.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ],
    "version": "2.0.0"
}